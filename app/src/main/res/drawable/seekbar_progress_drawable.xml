<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!--定义seekbar滑动条的底色-->
    <item
        android:id="@android:id/background"
        android:left="3dp"
        android:right="3dp"
        android:drawable="@drawable/seek_bar_secondaryprogress"></item>
    <item android:id="@android:id/secondaryProgress">
        <scale
            android:left="3dp"
            android:right="3dp"
            android:drawable="@drawable/seek_bg"
            android:scaleWidth="100%" />
    </item>
    <item android:id="@android:id/progress">
        <scale
            android:left="3dp"
            android:right="3dp"
            android:drawable="@drawable/seekbar_progress"
            android:scaleWidth="100%" />
    </item>
</layer-list>

